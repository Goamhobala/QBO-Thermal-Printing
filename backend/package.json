{
  "name": "qbo-thermal-backend",
  "version": "1.0.0",
  "description": "QuickBooks Online invoice creation backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "tsc",
    "build:frontend": "cd ../frontend && npm install && npm run build",
    "start": "NODE_ENV=production node dist/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "express-session": "^1.18.2",
    "intuit-oauth": "^4.2.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/node": "^20.10.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
